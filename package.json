{
	"name": "@cube-codes/cube-codes-ide",
	"version": "1.0.0",
	"description": "IDE to interact with a rubik cube",
	"type": "commonjs",
	"main": "dist/package/index.js",
	"types": "dist/package/index.d.ts",
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"build-browser": "rollup -c",
		"build-docs": "typedoc",
		"ci-build": "npm ci && npm run build && npm run test && npm run build-browser && npm run build-docs",
		"build-docs-zip": "cd dist/docs && bestzip ../docs.zip * && cd ../..",
		"ci-release": "npm run ci-build && npm run build-docs-zip && npm publish --access public"
	},
	"files": [
		"dist/package"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cube-codes/cube-codes-ide.git"
	},
	"keywords": [
		"Rubik",
		"Cube",
		"Algorithm",
		"Code",
		"Program",
		"Solution"
	],
	"author": "Lukas Lentner <kontakt@lukaslentner.de>",
	"license": "GPL-3.0-only",
	"bugs": {
		"url": "https://github.com/cube-codes/cube-codes-ide/issues"
	},
	"homepage": "https://ide.cube.codes",
	"devDependencies": {
		"@rollup/plugin-commonjs": "^15.0.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@types/ace": "0.0.44",
		"@types/bootstrap": "^5.0.5",
		"@types/jest": "^26.0.13",
		"@types/jquery": "^3.5.5",
		"bestzip": "^2.1.7",
		"jest": "^26.4.2",
		"rollup": "^2.26.11",
		"ts-jest": "^26.3.0",
		"typedoc": "^0.17.8",
		"typedoc-plugin-external-module-name": "^4.0.3",
		"typescript": "^4.0.2"
	},
	"dependencies": {
		"@cube-codes/cube-codes-model": "0.0.22",
		"ace": "^1.3.0",
		"bootstrap": "^4.6.0",
		"jquery": "^3.5.1"
	}
}
